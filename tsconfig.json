{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es7"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "noUnusedLocals": false,
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "examples/**/*"]
}
